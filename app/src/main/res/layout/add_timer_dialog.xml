<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSetTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_style"
        android:text="@string/set_time_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/tvSetTimeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/bIncreaseHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_drop_up_24"
        app:layout_constraintTop_toBottomOf="@id/tvSetTimeTitle"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/etHours"/>

    <EditText
        android:id="@+id/etHours"
        android:hint="@string/hours"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:ems="5"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/bIncreaseHours"
        app:layout_constraintEnd_toEndOf="@id/divider"/>



    <Button
        android:id="@+id/bDecreaseHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintTop_toBottomOf="@id/etMinutes"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/etHours"/>


    <Button
        android:id="@+id/bIncreaseMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_drop_up_24"
        app:layout_constraintTop_toBottomOf="@id/tvSetTimeTitle"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/etMinutes"/>

    <EditText
        android:id="@+id/etMinutes"
        android:hint="@string/minutes"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:ems="5"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/bIncreaseMinutes"
        app:layout_constraintStart_toEndOf="@id/divider" />

    <Button
        android:id="@+id/bDecreaseMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintTop_toBottomOf="@id/etMinutes"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/etMinutes"/>

</androidx.constraintlayout.widget.ConstraintLayout>